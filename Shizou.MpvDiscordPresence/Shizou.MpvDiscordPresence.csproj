<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <None Update="main.lua">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <Content Condition="'$(RuntimeIdentifier)' == 'win-x86'" Include="DiscordGameSDK/lib/x86/discord_game_sdk.dll" CopyToOutputDirectory="PreserveNewest" TargetPath="./discord_game_sdk.dll" />
        <Content Condition="'$(RuntimeIdentifier)' == 'win-x64'" Include="DiscordGameSDK/lib/x86_64/discord_game_sdk.dll" CopyToOutputDirectory="PreserveNewest" TargetPath="./discord_game_sdk.dll" />
        <Content Condition="'$(RuntimeIdentifier)' == 'linux-64'" Include="DiscordGameSDK/lib/x86_64/discord_game_sdk.so" CopyToOutputDirectory="PreserveNewest" TargetPath="./discord_game_sdk.so" />
        <Content Condition="'$(RuntimeIdentifier)' == 'osx-x64'" Include="DiscordGameSDK/lib/x86_64/discord_game_sdk.dylib" CopyToOutputDirectory="PreserveNewest" TargetPath="./discord_game_sdk.dylib" />
        <Content Condition="'$(RuntimeIdentifier)' == 'osx-arm64'" Include="DiscordGameSDK/lib/aarch64/discord_game_sdk.dylib" CopyToOutputDirectory="PreserveNewest" TargetPath="./discord_game_sdk.dylib" />
    </ItemGroup>
</Project>
