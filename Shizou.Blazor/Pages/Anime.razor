@page "/Collection/{AnimeId:int}"

<div class="container-fluid">
    @if (_anime is not null)
    {
        <div class="row">
            <div class="col-6">
                @if (_anime.ImageFilename is not null)
                {
                    <img class="card-flex" src="@($"{WebPaths.AnimePostersDir}/{_anime.ImageFilename}")">
                }
            </div>
            <div class="col-6">
            </div>
        </div>
    }
    else
    {
        <h1>Anime not found</h1>
    }
</div>
