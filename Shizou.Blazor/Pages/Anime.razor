@page "/Collection/{AnimeId:int}"
@using Shizou.Data.Enums

<div class="container-fluid">
    @if (_anime is not null)
    {
        <div class="row justify-content-center">
            <div class="col-xl-3 col-lg-4 col-md-5 col-sm-6 d-flex justify-content-end">
                @if (_anime.ImageFilename is not null)
                {
                    <img class="card-flex" style="width: 100%;object-fit: contain;" src="@($"{WebPaths.AnimePostersDir}/{_anime.ImageFilename}")">
                }
            </div>
            <div class="col-xl-3 col-lg-4 col-md-5 col-sm-6 d-flex justify-content-start">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@_anime.Title</h4>
                        <p class="card-text">
                            @foreach (var s in _splitRegex.Split(_anime.Description ?? ""))
                            {
                                var res = _matchRegex.Match(s);
                                if (res.Success)
                                {
                                    <a href="@res.Groups[1]">@res.Groups[2]</a>
                                }
                                else
                                {
                                    @s
                                }
                            }
                        </p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Aired: @(_anime.AirDate ?? "??") - @(_anime.EndDate ?? "??")</li>
                            <li class="list-group-item">Type: @(_anime.AnimeType.ToString())</li>
                            @if (_anime.Restricted)
                            {
                                <li class="list-group-item">Hentai</li>
                            }
                            <li class="list-group-item">@(_anime.EpisodeCount) Episode@(_anime.EpisodeCount == 1 ? "" : "s")</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8 col-md-10 col-sm-12">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <td>Ep</td>
                            <td>Title</td>
                            <td>Dur</td>
                            <td>Air Date</td>
                            <td>Watch</td>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var ep in _anime.AniDbEpisodes.OrderBy(e => e.EpisodeType).ThenBy(e => e.Number))
                        {
                            <tr>
                                <td>
                                    @EpisodeTypeExtensions.ToEpString(ep.EpisodeType, ep.Number)
                                </td>
                                <td class="flex-grow-1 pe-1">
                                    @(ep.TitleRomaji ?? ep.TitleEnglish)
                                </td>
                                <td>
                                    @($"{(ep.DurationMinutes is null ? "??" : ep.DurationMinutes.ToString())} min")
                                </td>
                                <td >
                                    @(ep.AirDate?.ToString("yyyy-MM-dd"))
                                </td>
                                <td>
                                    @if (ep.Watched)
                                    {
                                        <button class="btn bi bi-eye-slash" @onclick="@(() => MarkEpisode(ep, false))"></button>
                                    }
                                    else
                                    {
                                        <button class="btn bi bi-eye" @onclick="@(() => MarkEpisode(ep, true))"></button>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <h1>Anime not found</h1>
    }
</div>
