@page "/Collection/{AnimeId:int}"
@using Shizou.Data.Enums

<div class="container-fluid">
    @if (_anime is not null)
    {
        <div class="row justify-content-center">
            <div class="col-xl-3 col-lg-4 col-md-5 col-sm-6 d-flex justify-content-end anime-poster">
                @if (_anime.ImageFilename is not null)
                {
                    <img src="@($"{WebPaths.AnimePostersDir}/{_anime.ImageFilename}")">
                }
            </div>
            <div class="col-xl-3 col-lg-4 col-md-5 col-sm-6 d-flex justify-content-start align-items-start">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@_anime.Title</h4>
                        <p class="card-text">
                            @foreach (var s in _splitRegex.Split(_anime.Description ?? ""))
                            {
                                var res = _matchRegex.Match(s);
                                if (res.Success)
                                {
                                    <a href="@res.Groups[1]">@res.Groups[2]</a>
                                }
                                else
                                {
                                    @s
                                }
                            }
                        </p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Aired: @(_anime.AirDate ?? "??") - @(_anime.EndDate ?? "??")</li>
                            <li class="list-group-item">Type: @(_anime.AnimeType.ToString())</li>
                            @if (_anime.Restricted)
                            {
                                <li class="list-group-item">Hentai</li>
                            }
                            <li class="list-group-item">@(_anime.EpisodeCount) Episode@(_anime.EpisodeCount == 1 ? "" : "s")</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8 col-md-10 col-sm-12">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <td>Ep</td>
                            <td>Title</td>
                            <td>Dur</td>
                            <td>Air Date</td>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var ep in _anime.AniDbEpisodes.OrderBy(e => e.EpisodeType).ThenBy(e => e.Number))
                        {
                            <tr role="button" @onclick="@(() => ToggleEpExpand(ep))">
                                <td>
                                    @EpisodeTypeExtensions.ToEpString(ep.EpisodeType, ep.Number)
                                </td>
                                <td class="flex-grow-1 pe-1">
                                    @(ep.TitleRomaji ?? ep.TitleEnglish)
                                </td>
                                <td>
                                    @($"{(ep.DurationMinutes is null ? "??" : ep.DurationMinutes.ToString())} min")
                                </td>
                                <td >
                                    @(ep.AirDate?.ToString("yyyy-MM-dd"))
                                </td>
                            </tr>
                            @if (_episodeExpanded.TryGetValue(ep.Id, out var expanded) && expanded)
                            {
                                <tr>
                                    <td colspan="5">
                                        <table class="table table-striped table-hover">
                                            <thead>
                                            <tr>
                                                <td>Group</td>
                                                <td>Size</td>
                                                <td>Res</td>
                                                <td>Source</td>
                                                <td>Hash</td>
                                                <td>Watch</td>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            @foreach (var (f, lf) in GetFilesForEpisode(ep))
                                            {
                                                <tr>
                                                    <td>@(f.AniDbGroup?.ShortName)</td>
                                                    <td>@(lf.FileSize)</td>
                                                    <td>@(f.Video is not null ? $"{f.Video.Height}x{f.Video.Width}" : null)</td>
                                                    <td>@(f.Source)</td>
                                                    <td>@(lf.Crc)</td>
                                                    <td>
                                                        @if (f.Watched)
                                                        {
                                                            <button class="btn bi bi-eye-slash" @onclick:stopPropagation="true" @onclick="@(() => MarkFile(f, false))"></button>
                                                        }
                                                        else
                                                        {
                                                            <button class="btn bi bi-eye" @onclick:stopPropagation="true" @onclick="@(() => MarkFile(f, true))"></button>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                            @foreach (var ml in GetManualLinksForEpisode(ep))
                                            {
                                                <tr>
                                                    <td>Manual Link</td>
                                                    <td>@(ml.FileSize)</td>
                                                    <td>0x0</td>
                                                    <td>???</td>
                                                    <td>@(ml.Crc)</td>
                                                    <td>
                                                        @if (ep.Watched)
                                                        {
                                                            <button class="btn bi bi-eye-slash" @onclick:stopPropagation="true" @onclick="@(() => MarkEpisode(ep, false))"></button>
                                                        }
                                                        else
                                                        {
                                                            <button class="btn bi bi-eye" @onclick:stopPropagation="true" @onclick="@(() => MarkEpisode(ep, true))"></button>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <h1>Anime not found</h1>
    }
</div>
