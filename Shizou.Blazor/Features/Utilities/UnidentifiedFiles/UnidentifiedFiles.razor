@page "/UnidentifiedFiles"
@using Shizou.Data.Models
<PageTitle>Unidentified Files</PageTitle>

<article class="container-fluid">
    <div class="d-flex mb-2">
        <button type="button" class="btn btn-primary" @onclick="@(() => ScanFiles(_localFiles))">
            <i class="bi bi-search"></i> Scan All
        </button>
        <button type="button" class="btn btn-primary" @onclick="@(() => HashFiles(_localFiles))">
            <i class="bi bi-hash"></i> Hash All
        </button>
    </div>
    <div class="row gx-2">
        <div class="col overflow-auto">
            <SelectTable TValue="@LocalFile" OnChange="@OnSelectChanged" class="table table-hover resizable-table-columns table-responsive" style="min-width: 50rem">
                <thead>
                <tr>
                    <th>Folder</th>
                    <th style="width: 40%">Name</th>
                    <th>Size</th>
                    <th>Hash</th>
                    <th>Updated</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var (file, idx) in _localFiles.Select((file, idx) => (file, idx)))
                {
                    <SelectRow TValue="@LocalFile" Index="@idx" Value="@file">
                        <td>@(file.ImportFolder?.Path)</td>
                        <td>@(file.PathTail)</td>
                        <td>@(Math.Round(file.FileSize / (1024.0 * 1024), 2)) MiB</td>
                        <td>@(file.Ed2k)</td>
                        <td>@(file.Updated?.ToLocalTime())</td>
                    </SelectRow>
                }
                </tbody>
            </SelectTable>
        </div>
        <div class="col-4 col-lg-3 sticky-top" style="align-self: flex-start; top: 3.5rem">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <strong>@(_selectedFiles.Count) file@(_selectedFiles.Count == 1 ? "" : "s") selected</strong>
                    </h5>
                    @if (_selectedFiles.Count > 0)
                    {
                        <button type="button" class="btn btn-primary" @onclick="@(() => ScanFiles(_selectedFiles))">
                            <i class="bi bi-search"></i> Scan
                        </button>
                        <button type="button" class="btn btn-primary" @onclick="@(() => HashFiles(_selectedFiles))">
                            <i class="bi bi-hash"></i> Hash
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</article>
