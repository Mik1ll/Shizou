<div @ref="_elementReference" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <strong class="me-auto">@(ToastItem.Title)</strong>
        <small class="text-body-secondary">@(ToastItem.TriggerTime.LocalDateTime)</small>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
        @(ToastItem.Body)
    </div>
</div>