<div @ref="@_elementReference" id="@OffCanvasDirectionClass" class="offcanvas @OffCanvasDirectionClass" tabindex="-1">
    <button type="button" class="btn btn-secondary position-absolute visible @ButtonDirectionClass" style="top:25vh; @ButtonDirectionStyle"
            @onclick="@Toggle">
        <i class="bi @(_open ^ Direction == OffcanvasDirection.End ? "bi-chevron-left" : "bi-chevron-right")"></i>
    </button>
    @ChildContent
</div>
