<input type="search" size="40" @bind="@_query" @oninput="@OnInputChanged">
<select size="@(_results.Count)" multiple
        class="dropdown-menu @(_results.Count > 0 ? "show" : "")" style="overflow-y: auto"
        @onchange="@OnSelectChanged">
    @foreach (var result in _results)
    {
        <option class="dropdown-item" value="@(result.Item1)">
            @result.Item2
        </option>
    }
</select>
