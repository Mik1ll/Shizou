@inherits LayoutComponentBase

<PageTitle>Shizou</PageTitle>
<ToastDisplay>
    <CascadingBlazoredModal UseCustomLayout="true" AnimationType="@(ModalAnimationType.None)">
        <NavMenu/>
        <main class="content px-4">
            <ErrorBoundary @ref="@_errorBoundary">
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent>
                    <div class="blazor-error-boundary">
                        @(context.Message)<br/>
                        @(context.StackTrace)
                    </div>
                </ErrorContent>
            </ErrorBoundary>
        </main>
    </CascadingBlazoredModal>
</ToastDisplay>
