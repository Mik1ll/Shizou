@page "/Collection"

<PageTitle>Collection</PageTitle>

<article class="container-fluid">
    <div class="d-flex flex-wrap gx-2 justify-content-center">
        @foreach (var anime in _anime)
        {
            <div class="card text-center m-2" role="button" @onclick="@(() => GoToAnime(anime.Id))">
                @if (anime.ImageFilename is not null)
                {
                    <img class="card-img img-fluid collection-card-img" src="@($"{WebPaths.AnimePostersDir}/{anime.ImageFilename}")">
                }
                <div class="card-img-overlay d-flex p-0">
                    <div class="align-self-end p-2 text-white bg-black bg-opacity-25 w-100 overflow-hidden" style="text-shadow: 2px 2px 3px #000">
                        @(anime.TitleTranscription)
                    </div>
                </div>
            </div>
        }
    </div>
</article>
