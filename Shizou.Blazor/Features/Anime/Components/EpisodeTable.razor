@using Shizou.Data.Enums
<table class="table table-hover">
    <thead>
    <tr>
        <th>Ep</th>
        <th>Title</th>
        <th></th>
        <th class="text-end">Files</th>
        <th class="text-end d-none d-md-table-cell">Len</th>
        <th class="text-end d-none d-md-table-cell">Aired</th>
    </tr>
    </thead>
    <tbody class="table-group-divider">
    @foreach (var ep in _episodes.OrderBy(e => e.EpisodeType).ThenBy(e => e.Number))
    {
        <tr role="button" @onclick="@(() => ToggleEpExpand(ep))">
            <td class="text-end">
                @EpisodeTypeExtensions.ToEpString(ep.EpisodeType, ep.Number)
            </td>
            <td class="absorbing-column">
                @(ep.TitleRomaji ?? ep.TitleEnglish)
            </td>
            <td>
                @if (_watchedEps.Contains(ep.Id))
                {
                    <i class="bi bi-eye"></i>
                }
            </td>
            <td class="text-end">
                @(_fileCounts[ep.Id])
            </td>
            <td class="text-nowrap text-end d-none d-md-table-cell">
                @($"{(ep.DurationMinutes is null ? "??" : ep.DurationMinutes.ToString())}m")
            </td>
            <td class="text-nowrap text-end d-none d-md-table-cell">
                @(ep.AirDate?.ToString("yyyy-MM-dd"))
            </td>
        </tr>
        @if (_episodeExpanded.TryGetValue(ep.Id, out var expanded) && expanded)
        {
            <tr>
                <td colspan="5">
                    @foreach (var aniDbFile in ep.AniDbFiles)
                    {
                        <FileCard AniDbFile="@aniDbFile" FileWatchedState="@(aniDbFile.FileWatchedState)" LocalFile="@(aniDbFile.LocalFile)" EpisodeWatchedState="@null" OnChanged="@Reload"></FileCard>
                    }
                    @foreach (var localFile in ep.ManualLinkLocalFiles)
                    {
                        <FileCard AniDbFile="@null" FileWatchedState="@null" LocalFile="@localFile" EpisodeWatchedState="@(ep.EpisodeWatchedState)" OnChanged="@Reload"></FileCard>
                    }
                </td>
            </tr>
        }
    }
    </tbody>
</table>
